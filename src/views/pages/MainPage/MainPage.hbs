<div class="chats">
  <div class="chats__head">
    {{{ profileLink }}}
    <input type="search" class="chats__search" placeholder="Поиск" />
  </div>
  <div class="chat-list">
    {{{ chats }}}
  </div>
</div>

<div class="chat">

  {{#if chatId}}
    <div class="chat__head">
      <div class="chat__info">
        <div class="chat__image"></div>
        <span class="chat__name">{{ activeChat.name }}</span>
      </div>
      <button class="chat__actions"><span /></button>
    </div>

    <div class="chat__messages">
      {{#each messages}}
        {{#if date}}
          <p class="chat__date">{{ date }}</p>
        {{/if}}
        <div class="chat__message{{#if isOwn}} chat__message_own{{/if}}">
          <div class="chat__content">
            {{{ content }}}
          </div>
          <span class="chat__message-time">{{ time }}</span>
        </div>
      {{/each}}
    </div>

    <form class="chat__footer">
      <button class="chat__attach"></button>
      {{{ messageInputField }}}
      <button class="chat__send" type="submit"></button>
    </form>

  {{else}}
    <div class="chat__unselected-message">Выберите чат чтобы отправить сообщение</div>
  {{/if}}
</div>